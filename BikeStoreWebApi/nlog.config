<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwConfigExceptions="true"
      internalLogLevel="info"
      internalLogFile="internal-nlog.log">

	<targets>
		<target xsi:type="File" name="logfile" fileName="logs/logfile.log" layout="${longdate} ${uppercase:${level}} ${message} ${exception:format=toString}" />
		<target xsi:type="Console" name="logconsole" layout="${longdate} ${uppercase:${level}} ${message} ${exception:format=toString}" />
	</targets>

	<rules>
		<logger name="*" minlevel="Warn" writeTo="logconsole,logfile" />
	</rules>
</nlog>
